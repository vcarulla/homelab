$TTL 3600 ; 1 hour
$ORIGIN 1.168.192.in-addr.arpa.

@   IN SOA  ns.example.com. hostmaster.example.com. (
        2026010603 ; serial
        3600       ; refresh (1 hour)
        1800       ; retry (30 minutes)
        604800     ; expire (1 week)
        3600       ; minimum ttl (1 hour)
)

    IN NS   ns.example.com.

